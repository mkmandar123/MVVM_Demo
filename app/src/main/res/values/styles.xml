<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- AuthActivity theme. -->
    <style name="AuthActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/AuthActivitySecondary</item>
        <item name="colorPrimaryDark">@color/AuthactivityPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- HomeActivity theme. -->
    <style name="HomeActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/HomeActivitySecondary</item>
        <item name="colorPrimaryDark">@color/HomeActivityPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Bottom Nav Bar Theme-->
    <style name="BottomNavigation">
        <item name="android:background">@color/BottomNavBarBg</item>
        <!--        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>-->
        <item name="itemIconTint">@color/BottomNavBarText</item>
        <item name="itemTextColor">@color/BottomNavBarText</item>
        <!--        <item name="paddingStart">@dimen/bottom_navigation_padding</item>-->
        <!--        <item name="paddingEnd">@dimen/bottom_navigation_padding</item>-->
    </style>

</resources>